<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.investment-system.monthly-training</string>

    <!-- Call venv Python directly to avoid macOS Gatekeeper blocking shell scripts -->
    <key>ProgramArguments</key>
    <array>
        <string>__VENV_PYTHON__</string>
        <string>__PROJECT_DIR__/training/train.py</string>
        <string>--bucket</string>
        <string>investment-system-data</string>
        <string>--region</string>
        <string>us-east-1</string>
        <string>--max-days</string>
        <string>365</string>
        <string>--epochs</string>
        <string>100</string>
    </array>

    <key>WorkingDirectory</key>
    <string>__PROJECT_DIR__</string>

    <key>StartCalendarInterval</key>
    <dict>
        <key>Day</key>
        <integer>1</integer>
        <key>Hour</key>
        <integer>2</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>__LOG_DIR__/training.log</string>

    <key>StandardErrorPath</key>
    <string>__LOG_DIR__/training.error.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
        <key>AWS_PROFILE</key>
        <string>personal</string>
        <key>AWS_REGION</key>
        <string>us-east-1</string>
        <key>PYTHONPATH</key>
        <string>__PROJECT_DIR__</string>
    </dict>

    <key>RunAtLoad</key>
    <false/>
</dict>
</plist>
